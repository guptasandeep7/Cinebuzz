<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="345dp"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/grey_font"
        app:cardCornerRadius="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profile_movie_image"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@color/grey_font" />

        <View
            android:id="@+id/profile_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="120dp"
            android:background="#61BA68C8" />

        <TextView
            android:id="@+id/profile_movie_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="136dp"
            android:background="@drawable/home_bottom_layout"
            android:text="                      "
            android:textSize="20sp" />


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>