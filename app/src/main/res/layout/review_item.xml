<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/review_dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        style="@style/ShapeAppearance.App.CircleImageView"
        android:src="@drawable/ic_undraw_profile_pic_ic5t_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/review_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="21dp"
        android:text="Name"
        android:fontFamily="@font/roboto"
        android:textSize="16sp"
        android:letterSpacing="0.03"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/review_dp"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/review_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:maxLines="3"
        android:text="TextView"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_dp" />
</androidx.constraintlayout.widget.ConstraintLayout>